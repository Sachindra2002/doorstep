<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>VisitorController</servlet-name>
        <servlet-class>Controller.VisitorController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RestaurantController</servlet-name>
        <servlet-class>Controller.RestaurantController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>Controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RedirectingController</servlet-name>
        <servlet-class>Controller.RedirectingController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminHomeController</servlet-name>
        <servlet-class>Controller.AdminHomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CustomerHomeController</servlet-name>
        <servlet-class>Controller.CustomerHomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginController</servlet-name>
        <servlet-class>Controller.loginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VisitorController</servlet-name>
        <url-pattern>/VisitorController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RestaurantController</servlet-name>
        <url-pattern>/RestaurantController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RedirectingController</servlet-name>
        <url-pattern>/RedirectingController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminHomeController</servlet-name>
        <url-pattern>/AdminHomeController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomerHomeController</servlet-name>
        <url-pattern>/CustomerHomeController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginController</servlet-name>
        <url-pattern>/loginController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <error-code>404</error-code>
        <location>/error404.html</location>
    </error-page>
</web-app>
